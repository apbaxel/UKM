UKM=/data/UKM;
BB=$UKM/busybox;

if [ -f $1 ]; then
	if [[ ! -z $2 ]]; then
		VALUE=$2;
		
		if [ "$VALUE" -eq 1 ]; then
			$BB echo "Y" > $1;
		elif [ "$VALUE" -eq 0 ]; then
			$BB echo "N" > $1;
		fi;
	fi;

VALUE=`$BB cat $1`;

	if [ $VALUE = "Y" ]; then
		$BB echo "1";
	elif [ $VALUE = "N" ]; then
		$BB echo "0";
	else
		$BB echo "0";
	fi;
	
else
	$BB echo "0";
fi;
