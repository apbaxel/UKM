UKM=/data/UKM;
BB=$UKM/busybox;

LG_Stock() {
CAM_MIC_GAIN="0 255";
HEADPHONE_GAIN="0 0 255";
HEADPHONE_PA_GAIN="22 22 211";
MIC_GAIN="0 255";
SOUND_CONTROL_LOCKED=0;
SPEAKER_GAIN="0 0 255";
}

Quality() {
CAM_MIC_GAIN="0 255";
HEADPHONE_GAIN="254 254 259";
HEADPHONE_PA_GAIN="17 17 221";
MIC_GAIN="0 255";
SOUND_CONTROL_LOCKED=0;
SPEAKER_GAIN="254 254 259";
}

Loudness() {
CAM_MIC_GAIN="0 255";
HEADPHONE_GAIN="9 9 237";
HEADPHONE_PA_GAIN="19 19 217";
MIC_GAIN="0 255";
SOUND_CONTROL_LOCKED=0;
SPEAKER_GAIN="5 5 245";
}

Quiet() {
CAM_MIC_GAIN="0 255";
HEADPHONE_GAIN="251 251 265";
HEADPHONE_PA_GAIN="24 24 207";
MIC_GAIN="0 255";
SOUND_CONTROL_LOCKED=0;
SPEAKER_GAIN="253 253 261";
}

if [ -f $1 ]; then
	if [[ ! -z $2 ]]; then
		if [ "$1" == "$UKM/files/sound_prof" ]; then
			$BB echo $2 > $1;
		
			if [ $2 != "Custom" ]; then
				$2;
				$BB echo $CAM_MIC_GAIN > /sys/kernel/sound_control_3/gpl_cam_mic_gain;
				$BB echo $HEADPHONE_GAIN > /sys/kernel/sound_control_3/gpl_headphone_gain;
				$BB echo $HEADPHONE_PA_GAIN > /sys/kernel/sound_control_3/gpl_headphone_pa_gain;
				$BB echo $MIC_GAIN > /sys/kernel/sound_control_3/gpl_mic_gain;
				$BB echo $SOUND_CONTROL_LOCKED > /sys/kernel/sound_control_3/gpl_sound_control_locked;
				$BB echo $SPEAKER_GAIN > /sys/kernel/sound_control_3/gpl_speaker_gain;
			fi;
			
		elif [ "$1" == "/sys/kernel/sound_control_3/gpl_cam_mic_gain" ] || [ "$1" == "/sys/kernel/sound_control_3/gpl_mic_gain" ]; then
			if [ "$2" -lt 0 ]; then
				V=$2;
				V=$((256 + V));
				H=$((255 - V));
			
				$BB echo "$V $H" > $1;
			else
				V=$2;
				H=$((255 - V));
				
				$BB echo "$V $H" > $1;
			fi;
		
		elif [ "$1" == "/sys/kernel/sound_control_3/gpl_headphone_gain" ] || [ "$1" == "/sys/kernel/sound_control_3/gpl_speaker_gain" ]; then
			if [ "$2" -lt 0 ]; then
				V=$2;
				H=$((255 - V - V));
				V=$((256 + V));
			
				$BB echo "$V $V $H" > $1;
			else
				V=$2;
				H=$((255 - V - V));
				
				$BB echo "$V $V $H" > $1;
			fi;
			
		else
			V=$2;
			V=$((22 - V));
			H=$((255 - V - V));
			
			$BB echo "$V $V $H" > $1;
		fi;
	fi;
	
	PATH=$1;
	C=`while read V1 V2; do echo $V1; done < $PATH`;

	if [ "$PATH" == "/sys/kernel/sound_control_3/gpl_headphone_pa_gain" ]; then
		C=$((22 - C));
			
		$BB echo $C;
	else
		if [ "$C" -gt 200 ]; then
			C=$((C - 256));
			
			$BB echo $C;
		else
			$BB echo $C;
		fi;
	fi;
fi;
